<Page x:Class="CsTeach.Pages.helpLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CsTeach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="helpLogin" Width="792" Height="419">

    <Grid Margin="0,0,0,10">
        <TextBox HorizontalAlignment="Left" Height="73" Margin="63,10,0,0" TextWrapping="Wrap" Text="When you open the app you can see the login form. It is mandatory to login (as student or teacher) in order to gain access to this app. If you dont have an account you can easily create one clicking on the text bellow the form, which will redirect you to the register form." VerticalAlignment="Top" Width="675" IsReadOnly="True" FontSize="16"/>
        <Image HorizontalAlignment="Left" Height="288" VerticalAlignment="Top" Width="424" Margin="446,97,-78,0" Source="/CsTeach;component/Images/register.png"/>
        <Image HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="383" Margin="10,97,0,0" Source="/CsTeach;component/Images/login.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/CsTeach;component/Images/login.png"/>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Page>
